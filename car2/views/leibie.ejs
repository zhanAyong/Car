<script type="text/javascript" src="js/PageNav.js"></script>
<script type="text/javascript" src="js/bootstrap.min.js"></script>
<script>
    // 分页
    $.get("/leibieall?page=1",function(data){
        new PageNav({
            boxid : "pagenavbox",
            page : 1,
            pageAmount : data.page,
            change : function(pagenumber){
                gotopage(pagenumber);
            }
        })
        gotopage(1);
    })

    function gotopage(pagenumber){
        $("#tbody").empty();
        $.get("/leibieall?page="+pagenumber,function(data){
            $.each(data.result,function(i,n){
                $tr=$("<tr></tr>");
                $("<td><input type='radio' data-id='"+n.id+"' name='dd'></td>").appendTo($tr);
                $("<td></td>").html(n.id).appendTo($tr);
                $("<td></td>").html(n.name).appendTo($tr);
                $tr.appendTo($("#tbody"));
            })
        })
    }
    //添加
    $("#btn1").click(function(){
        $.post("/leibie",{
            id: parseInt($("input[name=id]").val()),
            name : $("input[name=name]").val(),
        },function(data){
            if(data.result == 1){
                alert("提交成功！");
                $("input[type=text]").val("");
            }else if(data.result == -1){
                alert("提交失败，编号被占用！");
            }else if(data.result == -2){
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }

        })
        $("#myModal").hide();
        window.location.href='/leibie'
    })
    //检测id号
    $("input[name=id]").blur(function(){
        var sid = parseInt($("input[name=id]").val());
        //判断是否是数字 并且是否是空，而且是六位数字
        if(isNaN(sid) || !sid || !(sid >= 100000 && sid <= 999999)){
            $("#sid_tip").removeClass("alert-success").addClass("alert-danger").html("请填写正确的学号，编号是6位数字").show();
            return;
        }

        $.ajax({
            type : "propfind",
            url  : "/leibie/" + $("input[name=id]").val(),
            success : function(data){
                if(!data.result){
                    $("#sid_tip").removeClass("alert-success").addClass("alert-danger").html("编号被占用").show();
                }else{
                    $("#sid_tip").removeClass("alert-danger").addClass("alert-success").html("恭喜！可以使用！").show();
                }
            }
        });
    });
    //得到焦点的时候，提示框消失
    $("input[name=id]").focus(function(){
        $("#sid_tip").hide();
    });

    //修改
    $("#modo2").click(function(){
        var id=parseInt($("input[type=radio]:checked").attr("data-id"));
        $.ajax({
            url:"/leibie/"+id,
            type:"get",
            success:function(data){
                // console.log(data)
                if(data.s==-1){
                    alert("服务器错误Q!");
                }else{
                    $("<div></div>").html('<p><h5>行号:</h5><input type="" value="'+data.s.id+'" disabled="disabled" name="id"></p><p><h5>类型:</h5><input value="'+data.s.name+'" name="name"></p>').appendTo($("#bianji"))
                }
            }
        })
    })
    $("#btn2").click(function(){
        $.post("/fff/",{
            id: parseInt($("#bianji input[name=id]").val()),
            name : $("#bianji input[name=name]").val(),
        },function(data){
            if(data.result == 1){
                alert("修改成功！");
                window.location = "/leibie";
            }else{
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })
    //详情
    $("#modo3").click(function(){
        $("#xingqing").html("");
        var id=parseInt($("input[type=radio]:checked").attr("data-id"));
        $.ajax({
            url:"/leibie/"+id,
            type:"get",
            success:function(data){
                if(data.s==-1){
                    alert("服务器错误Q!");
                }else{
                    $("<div></div>").html('<p><h5>行号:'+data.s.id+'</h5></p><p><h5>类别:'+data.s.name+'</h5></p>').appendTo($("#xingqing"))
                }
            }
        })
    })
    //删除
    $("#btn4").click(function(){
        var id=parseInt($("input[type=radio]:checked").attr("data-id"));
        $.ajax({
            url : "/leibie/" + id,
            type : "delete",
            success : function(data){
                if(data.result == 1){
                    alert("删除成功");

                    $this.parents("tr").remove();

                }else{
                    alert("服务器错误！");
                }
            }

        });
        $("#myModal4").hide();
        window.location.href='/leibie'
    })
</script>
